{
  "extends": [
    "config:base",
    ":reviewer(team:team-shield)"
  ],
  "labels": ["dependencies", "renovate"],
  "dependencyDashboard": true,
  "ignorePaths": [
    ".github/workflows/zz_generated.*"
  ],
  "ignoreDeps": [
    "architect",
    "zricethezav/gitleaks-action",
    "actions/setup-go"
  ],
  "regexManagers": [
    {
      "fileMatch": ["^helm\\/.+\\/values\\.yaml$"],
      "matchStrings": ["chartName: (?<depName>.*)\n.*\\s*version: (?<currentValue>.*?)\n"],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "giantswarm/{{{depName}}-app",
      "extractVersionTemplate": "^v(?<version>.*)$"
    }
  ],
  "schedule": [ "after 4pm every weekday" ]
}
