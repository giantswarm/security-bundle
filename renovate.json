{
  "extends": [
    "config:base",
    ":reviewer(team:team-shield)"
  ],
  "labels": ["dependencies", "renovate"],
  "dependencyDashboard": true,
  "ignorePaths": [
    ".github/workflows/zz_generated.*"
  ],
  "ignoreDeps": [
    "architect",
    "zricethezav/gitleaks-action",
    "actions/setup-go"
  ],
  "packageRules": [
    {
      "matchSourceUrlPrefixes": ["https://github.com/giantswarm/"],
      "groupName": "All GiantSwarm packages"
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["^helm\\/.+\\/values\\.yaml$"],
      "matchStrings": ["chartName: (?<depName>.*)\n(.*)*version: (?<currentValue>.*?)\n"],
      "datasourceTemplate": "github-releases",
      "extractVersionTemplate": "^v(?<version>.*)$"
    }
  ],
  "schedule": [ "after 2pm on tuesday" ]
}
